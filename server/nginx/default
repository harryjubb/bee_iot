## Version 2021/04/27 - Changelog: https://github.com/linuxserver/docker-swag/commits/master/root/defaults/default

error_page 502 /502.html;

# redirect all traffic to https
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;
    return 301 https://$host$request_uri;
}

# API server block
server {
    listen 443 ssl http2 default_server;
    listen [::]:443 ssl http2 default_server;

    server_name api.*;

    # enable subfolder method reverse proxy confs
    include /config/nginx/proxy-confs/*.subfolder.conf;

    # all ssl related config moved to ssl.conf
    include /config/nginx/ssl.conf;

    client_max_body_size 0;

    # TODO: Cleaner to move this to a rtmp.* virtual server
    location /hls {
		proxy_pass http://nginx_rtmp:8080/hls;
	}

	location /test {
		add_header Content-Type text/plain;
		return 200 'buzzzzz';
	}

    location /healthcheck {
		add_header Content-Type text/plain;
		return 200 'Ok';
	}

	location /static {
		alias /static;
	}

	location /media {
		alias /media;
	}

	location / {
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
		proxy_set_header Host $http_host;
		# we don't want nginx trying to do something clever with
		# redirects, we set the Host: header above already.
		proxy_redirect off;
		proxy_pass http://apiary:8000;
	}
}

# Dashboard server block
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name dashboard.*;

    # enable subfolder method reverse proxy confs
    include /config/nginx/proxy-confs/*.subfolder.conf;

    # all ssl related config moved to ssl.conf
    include /config/nginx/ssl.conf;

    client_max_body_size 0;

    location / {
		add_header Content-Type text/plain;
        return 200 "dashboard";
        # proxy_pass http://thingsboard:9090/;
    }
}

# enable subdomain method reverse proxy confs
include /config/nginx/proxy-confs/*.subdomain.conf;
# enable proxy cache for auth
proxy_cache_path cache/ keys_zone=auth_cache:10m;
